<ContentPage
    x:Class="MoodJournalApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Page"
    Title="Mood Journal">

    <VerticalStackLayout Padding="20">
        <Label Text="Mood Journal" FontSize="24" FontAttributes="Bold" />

        <Picker x:Name="moodPicker"
                Title="Select mood"
                ItemsSource="{Binding MoodOptions}" />

        <Entry x:Name="noteEntry"
               Placeholder="Write a note..." />

        <HorizontalStackLayout>
            <Button Text="Add" Command="{Binding AddEntryCommand}" />
            <Button Text="Clear" Command="{Binding ClearEntriesCommand}" />
        </HorizontalStackLayout>

        <CollectionView ItemsSource="{Binding Entries}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="5">
                        <Label Text="{Binding Mood}" FontAttributes="Bold" />
                        <Label Text="{Binding Note}" />
                        <Label Text="{Binding Date}" FontSize="10" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
