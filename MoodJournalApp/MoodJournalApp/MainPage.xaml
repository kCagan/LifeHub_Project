<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoodJournalApp.MainPage"
             Title="Mood Journal">

    <VerticalStackLayout Padding="20" Spacing="10">

        <Label Text="Mood Journal" 
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Entry x:Name="moodEntry"
               Placeholder="Enter your mood..." />

        <Editor x:Name="noteEntry"
                Placeholder="Add a note..."
                AutoSize="TextChanges"
                HeightRequest="100" />

        <Button Text="Add Entry"
                BackgroundColor="#4CAF50"
                TextColor="White"
                Clicked="OnAddEntryClicked" />

        <CollectionView x:Name="entriesList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="#ddd" Padding="10" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Mood}" FontAttributes="Bold" />
                            <Label Text="{Binding Note}" FontSize="14" />
                            <Label Text="{Binding Date}" FontSize="12" TextColor="Gray" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
