<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HabitTrackerApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Habit Tracker">

    <VerticalStackLayout Padding="20" Spacing="16">

        <Label Text="Daily Habit Tracker"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Entry x:Name="habitEntry"
               Placeholder="Enter a new habit..." />

        <!-- 🔹 ICommand binding (AddHabitCommand) -->
        <Button Text="Add Habit"
                Command="{Binding AddHabitCommand}"
                BackgroundColor="#4CAF50"
                TextColor="White" />

        <Button Text="Clear All"
                Command="{Binding ClearHabitsCommand}"
                BackgroundColor="#D32F2F"
                TextColor="White" />

        <CollectionView x:Name="habitList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="#ccc" Padding="10" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}"
                                   FontAttributes="Bold"
                                   FontSize="18" />
                            <Label Text="{Binding DateAdded, StringFormat='{0:MMM dd, HH:mm}'}"
                                   TextColor="Gray"
                                   FontSize="12" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
