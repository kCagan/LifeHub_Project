<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DashboardApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Dashboard">

    <VerticalStackLayout Padding="20" Spacing="16">

        <Label Text="LifeHub Dashboard"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- 🔹 ICommand örneği (XAML'den bağlanan) -->
        <Button Text="Habit Tracker"
                Command="{Binding OpenHabitCommand}"
                BackgroundColor="#4CAF50"
                TextColor="White" />

        <!-- Diğerleri klasik event -->
        <Button Text="Mood Journal"
                Clicked="OnMoodClicked"
                BackgroundColor="#2196F3"
                TextColor="White" />

        <Button Text="Planner"
                Clicked="OnPlannerClicked"
                BackgroundColor="#FF9800"
                TextColor="White" />

        <Label x:Name="status"
               Text="Select an app to open..."
               HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
