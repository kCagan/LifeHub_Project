<ContentPage
    x:Class="PlannerApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Page"
    Title="Daily Planner">

    <VerticalStackLayout Padding="20">
        <Label Text="Planner" FontSize="24" FontAttributes="Bold" />

        <Entry x:Name="taskEntry" Placeholder="Enter task" />
        <DatePicker x:Name="datePicker" />

        <HorizontalStackLayout>
            <Button Text="Add" Command="{Binding AddTaskCommand}" />
            <Button Text="Clear" Command="{Binding ClearTasksCommand}" />
        </HorizontalStackLayout>

        <CollectionView ItemsSource="{Binding Tasks}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout>
                        <CheckBox IsChecked="{Binding IsCompleted}" />
                        <VerticalStackLayout>
                            <Label Text="{Binding Title}" />
                            <Label Text="{Binding CreatedAt, StringFormat='Created: {0:dd.MM HH:mm}'}" FontSize="10" />
                            <Label Text="{Binding Date, StringFormat='Due: {0:dd.MM.yy}'}" FontSize="10" />
                        </VerticalStackLayout>
                        <Button Text="X"
                                Command="{Binding Source={x:Reference Page}, Path=BindingContext.DeleteTaskCommand}"
                                CommandParameter="{Binding .}" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
